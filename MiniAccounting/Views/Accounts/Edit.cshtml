@model MiniAccounting.Models.Accounts


<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="AccountId" />
    <div class="form-group">
        <label asp-for="AccountCode"></label>
        <input asp-for="AccountCode" class="form-control" disabled/>
    </div>

    <div class="form-group">
        <label asp-for="AccountName"></label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" disabled/>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

    
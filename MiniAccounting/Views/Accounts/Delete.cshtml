@model MiniAccounting.Models.Accounts

<h2>Are you sure to delete the account?</h2>

<form asp-action="Delete" method="post">

    <input type="hidden" asp-for="AccountId" />
    <div class="form-group">
        <label asp-for="AccountCode"></label>
        <input asp-for="AccountCode" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="AccountName"></label>
        <input asp-for="AccountName" class="form-control" disabled/>
    </div>



    <div class="form-group">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" disabled />
    </div>

    <br />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

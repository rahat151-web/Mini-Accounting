@model MiniAccounting.Models.Users.UserModel

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="mb-4 text-center">Are you sure want to Delete?</h2>

<form asp-action="DeleteUser" method="post" class="w-50 mx-auto">

    @* Hidden Id *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" disabled />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" disabled />
    </div>

    <div class="form-group mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" disabled />
    </div>

    <div class="form-group mb-3">
        <label asp-for="RoleName" class="form-label"></label>

        <input asp-for="RoleName" class="form-control" disabled />

    </div>

    




    <div class="text-center">
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="GetAllUsersDetails" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {


    <script>
        $(document).ready(function () {
            $('#changePasswordBtn').click(function () {
                $('#passwordSection').slideToggle();
            });
        });
    </script>
}
